<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.Html"/>
        <variable
            name="eventViewModel"
            type="com.example.mnowak.cirriculumvitae.model.StudiesActivityViewModel.EventViewModel" />
        <variable
            name="studiesViewModel"
            type="com.example.mnowak.cirriculumvitae.model.StudiesActivityViewModel" />
    </data>
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:clickable="false"
        android:gravity="start|top"
        android:paddingTop="8dp"
        android:paddingStart="4dp"
        android:layout_marginStart="-6dp"
        android:textSize="@dimen/more_info_regular_text_size"
        android:text="@{eventViewModel.getPreparedEventText(studiesViewModel.expanded)}"/>
</layout>
